<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Light Theme -->
    <style name="Base.Theme.TMFlix" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Warna utama aplikasi -->
        <item name="colorPrimary">@color/lil_light_red_</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/darklight_red2</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSecondaryVariant">@color/tablayout_dark</item>

        <!-- Kartu & permukaan -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurfaceContainerLowest">@color/darklight_red</item>

        <!-- Aksen & rating -->
        <item name="colorSecondary">@color/movie_accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- tanggal dan kepopuleran -->
        <item name="colorOnTertiary">@color/texttanggaldanpopuler</item>

        <!-- Error dan status -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Toolbar dan AppBar -->
        <item name="colorSurfaceVariant">@color/lil_light_red_</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorOutline">@color/carddetail_light</item>
        <item name="colorErrorContainer">@color/movie_primary</item>
        <item name="colorOnErrorContainer">@color/buttongantibahasa_dark</item>
        <item name="colorSecondaryContainer">@color/movie_primary_light</item>

        <!-- Bagian Fragment -->
        <item name="colorAccent">@color/lightfragment</item>

        <item name="colorButtonNormal">@color/carddetail_light</item>
        <item name="colorOnContainer">@color/textcarddetail_light</item>
    </style>

    <!-- Tema aplikasi yang digunakan -->
    <style name="Theme.TMFlix" parent="Base.Theme.TMFlix" />

</resources>